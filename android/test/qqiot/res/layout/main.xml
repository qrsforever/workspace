<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" >

    <Button
            android:id="@+id/btn_signal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/btn_signal_txt"
        />

    <LinearLayout
            android:id="@+id/ll_brightness"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            >

        <TextView
                android:id="@+id/brightness_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/lightsteelblue"
                android:textStyle="bold"
                android:textSize="20dip"
                android:gravity="right"
                android:text="亮度设置"/>

        <SeekBar
                android:id="@+id/brightness_sb"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginLeft="60dip"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:max="100"
                android:progress="50"
                android:indeterminate="false" />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_volume"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="30dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >


        <Button
                android:id="@+id/btn_volume_down"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/azure"
                android:textSize="20dip"
                android:text="音量-"
            />

        <Button
                android:id="@+id/btn_volume_up"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/azure"
                android:textSize="20dip"
                android:text="音量+"
            />
    </LinearLayout>


</LinearLayout>
